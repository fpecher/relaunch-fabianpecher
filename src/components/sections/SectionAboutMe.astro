---
import IconText from "../../components/IconText.astro";
import Timeline from "../../components/Timeline.astro";

import { Image } from 'astro:assets';
import profileImage from '../../assets/images/fabian-pecher-500@2x.jpg';

const timelineItems = [
{
    additionalClass: "",
    icon: "arrow-right",
    date: "Mai 2022 – Januar 2025",
    title: "Web Developer bei der JoussenKarliczek GmbH, Schorndorf",
    description: "Entwicklung und Betreuung statischer und dynamischer Webseiten, stetige Weiterentwicklung des firmeneigenen WordPress-Themes.",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "August 2021 – April 2022",
    title: "Marketing Assistant bei der ACTIV Werbetechnik GmbH, Kernen im Remstal",
    description: "Betreuung der Socialmedia-Kanäle (einschließlich Gestaltung benötigter Grafiken), Design und Realisierung diverser Landingpages, Gestaltung verschiedener Printprodukte (z.B. Datenblätter, Flyer, Informationsmappen).",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "Februar 2018 – Juli 2021",
    title: "Web Developer bei der SDV Werbestudio GmbH & Co. KG, Calw",
    description: "Gestaltung, Entwicklung und Betreuung statischer und dynamischer Webseiten, Kundenkontakt und -betreuung.",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "April 2017 – 2022",
    title: "Geschäftsführender Gesellschafter bei der World of Beachsports GbR, Tiefenbronn",
    description: "Entwicklung Corporate Design, Entwicklung verschiedener Web-Applikationen, Gestaltung verschiedener Printprodukte (wie zum Beispiel Flyer, Plakate und Dropflags), Betreuung der Socialmedia-Kanäle (einschließlich Gestaltung benötigter Grafiken).",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "August 2016 – Januar 2018",
    title: "Junior Software Developer bei der UDG United Digital Group GmbH, Ludwigsburg",
    description: "Frontendseitige Entwicklung modulbasierter Code-Elemente und Erarbeiten einer Pattern-Library in einem größerem Projektteam.",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "November 2014 – Juli 2016",
    title: "Frontend Developer bei der VoxelAir GmbH, Heimsheim",
    description: "Entwicklung und Betreuung statischer und dynamischer Webseiten inklusive Kundenkontakt und -betreuung.",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "Juli 2014 – November 2014",
    title: "Web Developer bei der SDV Werbestudio GmbH & Co. KG, Calw",
    description: "Gestaltung, Entwicklung und Betreuung statischer und dynamischer Webseiten inklusive Kundenkontakt und -betreuung.",
    aos: "fade-up"
  },
  {
    additionalClass: "",
    icon: "arrow-right",
    date: "2009 – 2014",
    title: "Selbstständige Tätigkeit bei der Kreativ-Agentur „co-op design“, Tiefenbronn",
    description: "Gestaltung, Entwicklung und Betreuung statischer und dynamischer Webseiten. Realisierung verschiedener Print-Produkte (zum Beispiel Flyer, Plakate, Dropflags).",
    aos: "fade-up"
  }
];

---

<section class="section-about-me" id="section-about-me">
    <div class="container">
        <div class="row">
            <div class="column column--12 -text-align--center">
                <Image src={profileImage} class="image-profile" data-aos="fade-up" data-aos-duration="1000" width="250" height="250" alt="Profilbild von Fabian Pecher" />
            </div>
        </div>
        <div class="row">
            <div class="column column--12 column--m-10 column--push-m-1">
                <p class="-text-align--center -font-size--20 -spacing-outer-40" data-aos="fade-up" data-aos-duration="1000">
                    Mein Name ist Fabian Pecher und Ende 2020 bin ich ins schöne
                    Remstal gezogen.
                </p>
                <p class="-text-align--center -font-size--20 -spacing-outer-10" data-aos="fade-up" data-aos-duration="1000">
                    Schon früh habe ich meine ersten Erfahrungen in der
                    Gestaltung und Umsetzung von Websiten gesammelt und durch
                    das 2-jährige <strong>Berufskolleg</strong> für Medientechnik
                    an der <a href="https://www.akademie-bw.de/pforzheim.html" target="_blank" class="-link" rel="nofollow">Akademie für Kommunikation</a>
                    festigte sich die Entscheidung, ein Teil der Medienwelt werden
                    zu wollen. Nach erfolgreichem Bestehen meiner <strong>Fachhochschulreife</strong> begann ich 2010 die Ausbildung zum Mediengestalter Digital
                    und Print. Durch meine <strong>selbstständige Tätigkeit</strong
                    > parallel zu meiner Ausbildung lernte ich nicht nur, wie elementar
                    eine deadline-gerechte Fertigstellung ist, sondern auch, wie
                    wichtig Kundenbindung und stetiger Kundenkontakt ist. Seit Juli
                    2014 bin ich <strong>staatlich geprüfter Mediengestalter mit Schwerpunkt Gestaltung und Technik.</strong>
                </p>

                <p class="-text-align--center -font-size--20 -spacing-outer-20" data-aos="fade-up" data-aos-duration="1000">
                    Aktuell bin ich als Web Entwickler in einer
                    Fullservice-Werbeagentur angestellt. Meine Aufgaben sind die
                    Realisierung von statischen und CMS-basierten Websiten.
                    Zusätzlich zu meiner Festanstellung war ich bis 2022 <strong>Gesellschafter</strong> der World of Beachsports GbR, die sich unter Anderem auf die
                    Entwicklung einer Suchmaschine für Beachvolleyball-Felder und
                    Community-Plattform für Beachvolleyballbegeisterte spezialisiert hat.
                </p>
            </div>
        </div>
        
        <div class="row" data-aos="fade-up" data-aos-duration="1000">
            <Timeline
                headline="Praktische Erfahrungen"
                additionalClass="-spacing-outer-100"
                items={timelineItems}
            />
        </div>
    </div>
</section>

<style lang="scss">
    @use '../../styles/setup/colors.setup' as colors;
    @use '../../styles/mixins/breakpoint.mixin' as breakpoints;
    @use '../../styles/mixins/spacing.mixin' as spacings;
    
    .section-about-me {
        @include spacings.spacing-inner('top', 40);
        @include spacings.spacing-inner('bottom', 40);
        @include spacings.spacing-outer(30);
        
        background: colors.$tertiary-gray;

        @include breakpoints.breakpoint('s') {
            @include spacings.spacing-outer(70);
            @include spacings.spacing-inner('top', 110);
            @include spacings.spacing-inner('bottom', 110);
        }
    
    }

    .image-profile {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        max-width: 250px;
    }
</style>